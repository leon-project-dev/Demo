<Window 
    x:Class="DrawShape.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"    
    Title="MainWindow" Height="800" Width="1000" AllowDrop="True" GiveFeedback="Window_GiveFeedback" MouseMove="Window_MouseMove">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Canvas AllowDrop="True" Grid.Column="0">
            <Line  X1="0" Y1="0" X2="500" Y2="100" x:Name="Line1" AllowDrop="True" Stroke="Blue" StrokeThickness="10" Fill="Black" StrokeLineJoin="Round" StrokeStartLineCap="Round" HorizontalAlignment="Left" StrokeEndLineCap="Round"></Line>
            <Line  X1="0" Y1="0" X2="100" Y2="100" AllowDrop="True" Stroke="Blue" StrokeThickness="5" Fill="Black" StrokeLineJoin="Round" StrokeStartLineCap="Round" HorizontalAlignment="Left" StrokeEndLineCap="Round"></Line>
        </Canvas>
        <TextBox Grid.Column="1" x:Name="InfoTextBox"></TextBox>
    </Grid>

</Window>
